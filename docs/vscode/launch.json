    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/api",
            "args": [
                "main:app",
                "--host",
                "0.0.0.0",
                "--port",
                "80",
                "--reload",
                "--reload-include",
                "*.py"
            ],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.vscode/.env"
        },
    ]
}